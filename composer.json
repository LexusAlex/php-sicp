    "autoload": {
        "psr-4": {
            "LexusAlex\\PhpSicp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LexusAlexTest\\PhpSicp\\": "tests/"
        }
    }
}
